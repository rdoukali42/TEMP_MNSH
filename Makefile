bonus: ${NAMEB}

m : ${NAME} ${NAMEB}

clean:
	@echo "\033[33m     Clean  ALL ..."
	@rm -f	$(OBJS) $(BONS)

fclean: clean
	@rm -f	$(NAME) $(NAMEB)
	@echo "\033[36mEverything is cleaned! \033[32m✓\n"

re: fclean all

reb : fclean all bonus

.PHONY: all clean fclean re